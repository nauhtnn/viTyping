<Window x:Class="WordTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordTest"
        mc:Ignorable="d"
        Title="MainWindow"
		Topmost="True"
		WindowStyle="None"
		ResizeMode="NoResize"
		Height="200">
    <StackPanel Loaded="Main_Loaded">
        <Button Content="Chấm điểm" Click="Button_Click" FontSize="18"/>
        <TextBox Visibility="Collapsed" x:Name="fName" Text="document name" TextWrapping="Wrap" />
        <TextBlock x:Name="output" TextWrapping="Wrap"
			Text="Hãy định dạng văn bản theo mẫu" FontSize="18" />
        <TextBox Visibility="Collapsed" x:Name="fReq" Text="requirement file" TextWrapping="Wrap" />
        <TextBlock x:Name="txtPenalty" Visibility="Collapsed" TextWrapping="Wrap" FontSize="32" />
		<TextBox x:Name="substr" Text="input" TextWrapping="Wrap" Width="800" Height="40"/>
		<TextBlock x:Name="rsubstr" Text="output" TextWrapping="Wrap" Width="800" Height="40"/>
		<Button Content="subs" Click="Button_Click_2" Height="20"/>
        <Button Content="close" Click="Button_Click_1" Height="20"/>
    </StackPanel>
</Window>
