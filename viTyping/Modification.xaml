<Page x:Class="viTyping.Modification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:viTyping"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False">
    <Viewbox>
        <DockPanel Loaded="Main_Loaded" Width="1280" Height="720">
            <TextBlock x:Name="TestDescription" Background="#1c64e7" Foreground="#fff"
                       FontSize="28"
                       Height="80" DockPanel.Dock="Top" Width="1280"/>
            <TextBox Text="txt" />
        </DockPanel>
    </Viewbox>
</Page>

