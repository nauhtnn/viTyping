<Page x:Class="viTyping.TopicSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:viTyping"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False">

    <Viewbox VerticalAlignment="Top" Loaded="Viewbox_Loaded">
        <StackPanel x:Name="MainGUI">
            <TextBlock Text="viTyping"
                FontFamily="Arial" FontSize="48" Height="64" Width="1280"
                TextAlignment="Center" Background="DarkBlue" Foreground="White"/>
        </StackPanel>
    </Viewbox>
</Page>
