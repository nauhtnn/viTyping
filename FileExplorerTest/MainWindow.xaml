<Window x:Class="FileExplorerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorerTest"
        mc:Ignorable="d"
        Title="File Explorer Test" Height="512" Width="512"
        d:DesignHeight="720" d:DesignWidth="1280">
    <StackPanel Orientation="Horizontal" Background="LightGray" x:Name="MainApp" Loaded="Main_Loaded" Initialized="MainApp_Initialized" Height="512" Width="480">
        <StackPanel x:Name="ProblemDesc">
            <TextBlock x:Name="DescText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Đề bài" VerticalAlignment="Top" Width="400" Background="#1c64e7" Foreground="#fff" FontSize="18"/>
            <TreeView x:Name="DirTree" Visibility="Collapsed"></TreeView>
        </StackPanel>
        <Button x:Name="CheckBtn" Content="Kiểm tra" FontSize="18" Click="Zip_Click" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="80" Foreground="White" Background="Green"/>
    </StackPanel>
</Window>
